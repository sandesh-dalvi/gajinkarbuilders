<style>
  .sliderq {
    height: 100vh;
    margin-top: -93px;
    position: relative;
  }
  .sliderq .list .item {
    position: absolute;
    inset: 0 0 0 0;
    overflow: hidden;
    opacity: 0;
    transition: 0.5s;
  }
  .sliderq .list .item img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  .sliderq .list .item::after {
    content: "";
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    bottom: 0;
    background-image: linear-gradient(
      to top,
      rgba(24, 6, 54, 0.445) 10%,
      transparent
    );
  }
  .sliderq .list .item .content {
    color: white;
    position: absolute;
    left: 10%;
    top: 20%;
    width: 500px;
    max-width: 80%;
    z-index: 1;
  }
  .sliderq .list .item .content p:nth-child(1) {
    text-transform: uppercase;
    letter-spacing: 10px;
  }
  .sliderq .list .item .content h2 {
    font-size: 3.2rem;
    margin: 0;
    font-weight: bold;
  }
  .sliderq .list .item .content a {
    margin-top: 10px;
  }
  .sliderq .list .item.active {
    opacity: 1;
    z-index: 10;
  }
  @keyframes showContent {
    to {
      transform: translateY(0);
      filter: blur(0);
      opacity: 1;
    }
  }
  .sliderq .list .item.active p:nth-child(1),
  .sliderq .list .item.active h2,
  .sliderq .list .item.active p:nth-child(3),
  .sliderq .list .item.active p:nth-child(4),
  .sliderq .list .item.active a {
    transform: translateY(30px);
    filter: blur(20px);
    opacity: 0;
    animation: showContent 0.5s 0.7s ease-in-out 1 forwards;
  }
  .sliderq .list .item.active h2 {
    animation-delay: 1s;
  }
  .sliderq .list .item.active p:nth-child(3),
  .sliderq .list .item.active p:nth-child(4) {
    animation-duration: 1.3s;
    padding-left: 10px;
    font-size: 1.5rem;
    font-weight: 500;
  }
  .sliderq .list .item.active a {
    animation-duration: 1.4s;
  }
  .arrows {
    position: absolute;
    top: 30%;
    right: 50px;
    z-index: 100;
  }
  .arrows button {
    background-color: #eee5;
    border: none;
    font-family: monospace;
    width: 40px;
    height: 40px;
    border-radius: 5px;
    font-size: x-large;
    color: #eee;
    transition: 0.5s;
  }
  .arrows button:hover {
    background-color: #eee;
    color: black;
  }
