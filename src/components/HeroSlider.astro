      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .sliderq .list .item .content {
      margin-top: 60px;
    }
    .sliderq .list .item .content h2 {
      font-size: 1.8rem;
      font-weight: 700;
    }
    .sliderq .list .item .content p {
      margin-top: 10px;
      font-size: 1.2rem;
      font-weight: 500;
    }
    .arrows {
      top: 15%;
    }
