---
import { Image } from "astro:assets";

const { heading, subHeading, img1, img2, img3 } = Astro.props;
---

<section
  class="services-heading mt-[-93px] h-screen flex justify-center items-center relative"
>
  <div
    class="absolute inset-0 z-0 opacity-40 w-[10%] top-[20%] left-[10%] md:w-[8%] lg:w-[6%] xl:w-[5%] animate-waving"
  >
    <Image src={img1} alt="" />
  </div>
  <div
    class="absolute inset-0 z-0 opacity-40 w-[10%] top-[80%] left-[40%] md:w-[8%] lg:w-[6%] xl:w-[5%] animate-waving"
  >
    <Image src={img2} alt="" />
  </div>
  <div
    class="absolute inset-0 z-0 opacity-40 w-[10%] top-[15%] left-[80%] md:w-[8%] lg:w-[6%] xl:w-[5%] animate-waving"
  >
    <Image src={img3} alt="" />
  </div>
  <div class="p-4 z-10">
    <div
      class="flex flex-col justify-center items-center gap-1 md:gap-2 lg:gap-3 xl:gap-4"
    >
      <h1
        class="text-center font-black pb-2 text-4xl mb-6 md:text-5xl lg:text-6xl xl:text-7xl"
      >
        {heading}
      </h1>
      <p
        class="text-center text-lg md:text-xl xl:text-2xl font-bold text-neutral-700
         md:max-w-[600px] lg:max-w-[800px]"
      >
        {subHeading}
      </p>
    </div>
  </div>
</section>
