---
import Header from "../components/Header";
import Footer from "../components/Footer.astro";
const {
  title,
  description = "Gajinkar Builders",
  image = "/images/logo.png",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.jpg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta property="og:image" content={image} />

    <title>{title}</title>
    <style is:global>
      html,
      body {
        width: 100%;
        overscroll-behavior: none;
        min-height: 100%;
      }
      body {
        box-sizing: border-box;
        overflow-x: hidden !important;
      }
      .slide_diagonal,
      .slide_diagonal-reverse {
        border-radius: 0.5rem;
        -webkit-transition: ease-out 0.4s;
        -moz-transition: ease-out 0.4s;
        transition: ease-out 0.4s;
      }

      .slide_diagonal {
        color: #fff;
        background-color: #ff3cac;
        background-image: linear-gradient(
          225deg,
          #ff3cac 0%,
          #784ba0 50%,
          #2b86c5 100%
        );
        border: 2px solid #0027a8;
        box-shadow: inset 0 0 0 0 #0027a8;
      }
      .slide_diagonal-reverse {
        color: #0027a8;
        background-color: #fff;
        border: 2px solid #fff;
        box-shadow: inset 0 0 0 0 #fff;
      }
      .slide_diagonal:hover {
        box-shadow: inset 500px 150px 0 0 #fff;
        color: #0027a8;
      }

      .slide_diagonal-reverse:hover {
        box-shadow: inset 500px 150px 0 0 #0027a8;
        color: #fff;
      }
      .contact-hero {
        background-image: url("/images/abouthero.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
      }
      .accordion-wrapper {
        /* border-radius: 8px; */
        overflow: hidden;
        /* box-shadow: 0 4px 4px -2px rgba(0, 0, 0, 0.5); */
        max-width: 700px;
        margin: 0 auto;
      }
      .accordion {
        width: 100%;
        color: #0027a8;
        overflow: hidden;
        margin-bottom: 16px;
      }
      .accordion-wrapper .accordion input {
        position: absolute;
        opacity: 0;
        z-index: -1;
      }
      .accordion:last-child {
        margin-bottom: 0;
      }
      .accordion-label {
        display: flex;
        -webkit-box-pack: justify;
        justify-content: space-between;
        padding: 16px;
        background-image: linear-gradient(
          109.6deg,
          rgb(205, 251, 254) 11.2%,
          rgba(163, 230, 255, 1) 91.1%
        );
        font-weight: bold;
        cursor: pointer;
        font-size: 16px;
      }
      .accordion-label:hover {
        background: #0027a8;
        color: #f5fbff;
      }
      .accordion-label::after {
        content: "\276F";
        width: 16px;
        height: 16px;
        text-align: center;
        -webkit-transition: all 0.3s;
        transition: all 0.3s;
      }
      .accordion-content {
        max-height: 0;
        padding: 0 16px;
        color: #000;
        background-image: linear-gradient(
          109.6deg,
          rgb(205, 251, 254) 11.2%,
          rgba(163, 230, 255, 1) 91.1%
        );
        -webkit-transition: all 0.3s;
        transition: all 0.3s;
      }
      .accordion-content p {
        margin: 0;
        color: #000;
        font-size: 14px;
      }
      .accordion-wrapper .accordion input:checked + .accordion-label {
        background: white;
        color: #0027a8;
        border: 2px solid #0027a8;
      }
      .accordion-wrapper .accordion input:checked + .accordion-label::after {
        -webkit-transform: rotate(90deg);
        transform: rotate(90deg);
      }
      .accordion-wrapper .accordion input:checked ~ .accordion-content {
        max-height: 100vh;
        padding: 16px;
      }

      @media (min-width: 768px) {
        .accordion-label {
          font-size: 20px;
        }
        .accordion-content p {
          font-size: 18px;
        }
      }
    </style>
  </head>
  <body class="min-h-screen">
    <main>
      <Header client:load />
      <slot />
      <Footer />
    </main>
  </body>
</html>
