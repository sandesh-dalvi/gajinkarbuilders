---
import AboutSection from "../../components/AboutSection.astro";
import MapSection from "../../components/MapSection.astro";
import MainLayout from "../../layouts/main-layout.astro";
---

<MainLayout title="Gajinkar Builders">
  <section class="relative isolate h-[55vh] about-hero flex items-center">
    <div class="absolute inset-0 w-full h-full bg-blue-950 opacity-70 z-0">
    </div>
    <div class="absolute top-[40%] left-[5%] z-10">
      <h2 class="uppercase text-teal-200 pb-3">About Us</h2>
      <h1
        class="font-extralight text-white text-4xl md:text-5xl md:max-w-xl md:leading-[4rem] xl:text-6xl xl:max-w-3xl xl:leading-[5rem]"
      >
        We Have A Goal To Achieve You To Your Destination
      </h1>
    </div>
  </section>

  <section class="about-section">
    <div class="pt-10">
      <AboutSection />
    </div>
  </section>

  <section class="mission-vision-section">
    <div class="p-4 py-4 flex justify-center items-center">
      <div
        class="grid grid-cols-1 md:grid-cols-2 justify-center items-center lg:max-w-5xl xl:max-w-6xl 2xl:max-w-[1400px]"
      >
        <div class="md:px-2">
          <h2 class="uppercase text-sm text-indigo-900 font-medium">
            Our Mission & Vision
          </h2>
          <div class="py-1">
            <h3
              class="font-medium text-3xl md:text-4xl pb-3 md:pt-2 md:pb-4 xl:text-5xl"
