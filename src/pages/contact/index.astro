---
import MainLayout from "../../layouts/main-layout.astro";
---

<MainLayout>
  <section
    class="relative isolate h-[15vh] md:h-[18vh] xl:h-[20vh] contact-hero flex items-center"
  >
    <div class="absolute inset-0 w-full h-full bg-blue-950 opacity-70 z-0">
    </div>
    <div class="absolute top-[50%] left-[5%] z-10">
      <div class="flex gap-1">
        <a href="/">
          <span class="uppercase text-teal-200 pb-3">Home /</span>
        </a>
        <h2 class="uppercase text-teal-200 pb-3">Contact Us</h2>
      </div>
      <!-- <h1
        class="font-extralight text-white text-4xl md:text-5xl md:max-w-xl md:leading-[4rem] xl:text-6xl xl:max-w-3xl xl:leading-[5rem]"
      >
        We're Always Helpful To Lend A Hand
      </h1> -->
    </div>
  </section>

  <section class="contact-top">
    <div
      class="py-4 flex flex-col md:flex-row gap-2 lg:gap-6 p-4 md:p-6 md:px-8 2xl:p-8 md:items-center lg:items-start justify-center md:py-6 lg:py-10 xl:py-14 2xl:py-20"
    >
      <div class="text-center md:text-left font-bold">
        <h1 class="text-2xl pb-2 md:text-4xl md:pb-4 lg:text-6xl lg:pb-6">
          Searching for Your Dream Home?
        </h1>
        <h2 class="text-xl pb-2 md:text-3xl lg:text-4xl">
          Let Us Guide You to Luxury Living!
        </h2>
      </div>
      <div class="">
        <form>
          <div
            class="grid grid-cols-1 gap-2 md:grid-cols-2 lg:grid-cols-4 justify-center items-center"
          >
            <div
              class="p-3 border border-indigo-200 shadow-inner rounded-2xl col-span-2 flex gap-2 items-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"
                ></path>
              </svg>
              <input
                type="text"
                name="name"
                id="name"
                placeholder="Your Name"
                required
                class="outline-none focus:outline-none bg-transparent"
              />
            </div>

            <div
              class="p-3 border border-indigo-200 shadow-inner rounded-2xl col-span-2 flex gap-2 items-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  d="M16.5 12a4.5 4.5 0 11-9 0 4.5 4.5 0 019 0zm0 0c0 1.657 1.007 3 2.25 3S21 13.657 21 12a9 9 0 10-2.636 6.364M16.5 12V8.25"
                ></path>
              </svg>

              <input
                type="email"
                name="email"
                id="email"
                placeholder="Your Email ID"
                required
                class="outline-none focus:outline-none bg-transparent"
              />
            </div>

            <div
              class="p-3 border border-indigo-200 shadow-inner rounded-2xl col-span-2 flex gap-2 items-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"
                ></path>
              </svg>

              <input
                type="number"
                name="phone"
                id="phone"
                placeholder="Your Phone Number"
                required
                class="outline-none focus:outline-none bg-transparent"
              />
            </div>

            <div
              class="p-3 border border-indigo-200 shadow-inner rounded-2xl col-span-2 flex gap-2 items-center"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"
                ></path>
              </svg>

              <input
                type="text"
                name="subject"
                id="subject"
                placeholder="Your Subject"
                required
                class="outline-none focus:outline-none bg-transparent"
              />
            </div>

            <div
              class="flex gap-2 p-3 border border-indigo-200 shadow-inner rounded-2xl col-span-2"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                ></path>
              </svg>

              <textarea
                name="message"
                id="message"
                placeholder="Your Message"
                required
                class="bg-transparent outline-none focus:outline-none h-[160px]"
              ></textarea>
            </div>

            <div class="col-span-2">
              <button
                class="bg-[radial-gradient(ellipse_at_right,_var(--tw-gradient-stops))] from-sky-400 to-indigo-900 rounded-[2rem] w-fit text-white text-center font-bold p-4 px-6 shadow-2xl scale-100 transition-all hover:scale-105"
              >
                Send Message
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>

  <section class="map-section relative isolate">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3844.7511383516107!2d73.82170247595134!3d15.49781265448008!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bbfc19552f23655%3A0x9fe81848e54f332f!2sSamrdh%20Design%20Studio%20%26%20Branding%20Pvt.Ltd.!5e0!3m2!1sen!2sin!4v1696486801024!5m2!1sen!2sin"
      style="border: 0"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      class="w-full h-[650px]"></iframe>
    <div
      class="absolute bg-white p-4 top-[20%] bottom-[20%] left-[5%] right-[5%] rounded-lg shadow-2xl md:p-16 md:top-[25%] md:bottom-[15%] lg:left-[30%] lg:right-[10%] xl:left-[40%] 2xl:left-[45%] flex justify-center items-center"
    >
      <div>
        <div class="p-4 text-2xl font-bold lg:text-3xl">
          For Additional Inquiries, Please Send an Email or Reach Out to Us
          using the Details Below
        </div>
        <div class="p-4 font-bold">
          <div
            class="bg-indigo-600 border-2 border-indigo-800 text-white rounded-xl shadow-2xl p-2 md:max-w-[350px] text-center text-lg md:text-xl lg:text-2xl lg:max-w-[400px]"
          >
            <div><span>Email</span> : sami9sai6@gmail.com</div>
            <div><span>Phone Number</span> : 8010519748</div>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .contact-top {
    background-color: #dee0ff;
    background-image: linear-gradient(0deg, #f8feff 0%, #ffffff 100%);
  }
</style>
