---
import MainLayout from "../layouts/main-layout.astro";

import HeroSlider from "../components/HeroSlider.astro";
import GallerySlider from "../components/GallerySlider";
import MapSection from "../components/MapSection.astro";
import AboutSection from "../components/AboutSection.astro";
import { Image } from "astro:assets";

import building from "../assets/icons/apartment_3.png";
import door from "../assets/icons/door.png";
import flat from "../assets/icons/house_2504003.png";
import privacy from "../assets/icons/privacy.png";
import cctv from "../assets/icons/cctv.png";
import evcharge from "../assets/icons/charger.png";
import gym from "../assets/icons/gym.png";

import construction from "../assets/icons/excavator.png";
import rebuild from "../assets/icons/hook_1.png";

import projects1 from "../assets/images/bridgeview/bridgemain.jpg";
import projects2 from "../assets/images/aspiretowers/aspiremain.jpeg";
import projects3 from "../assets/images/aspiretowers/aspire2.jpg";
import projects4 from "../assets/images/aurasky/auramain.jpg";
import aboutsection from "../assets/images/construct2.jpg";
---

<MainLayout title="Gajinkar Builders">
  <HeroSlider />

  <section class="about-section mt-1 md:mt-2 lg:mt-8 lg:mb-2 xl:mt-10 xl:mb-4">
    <AboutSection />
  </section>

  <!-- <section>
    <div class="image-view"></div>

    <div class="image-box">
      <div id="prev-btn"></div>
      <div id="next-btn"></div>
