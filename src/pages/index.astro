  <section class="projects-section rounded-b-3xl mt-3 mb-3">
    <div class="py-4 pb-6">
      <h2
        class="text-primary font-bold text-3xl md:text-4xl lg:text-5xl xl:text-6xl text-center pb-4 lg:py-6"
