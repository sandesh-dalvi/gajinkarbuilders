      <div>
        <SwiperProjects images={commercialPlot} mobile={false} client:load />
      </div>
    </div>
  </section>

  <section class="contacts-bgs">
    <div class="p-4 py-6 lg:py-8 xl:py-10">
      <div
        class="flex flex-col gap-2 md:flex-row lg:gap-4 xl:gap-6 md:justify-center md:items-center"
      >
        <div>
          <h2 class="font-bold text-xl md:text-3xl xl:text-4xl">
            Interested? Contact us to learn more.
          </h2>
        </div>

        <div class="lg:min-w-[500px] xl:min-w-[600px]">
          <form
            id="forms"
            class="text-lg lg:text-xl xl:text-2xl font-semibold flex flex-col gap-2 lg:gap-4 xl:gap-6"
          >
            <label
              ><span class="text-neutral-300">Name :</span>
              <input
                required
                type="text"
                name="name"
                id="name"
                class="bg-[#ffffff21] border rounded-xl"
              /></label
            >
            <label
              ><span class="text-neutral-300">Email :</span>
              <input
                required
                type="email"
                name="email"
                id="email"
                class="bg-[#ffffff21] border rounded-xl"
              /></label
            >
            <label
              ><span>Phone No. :</span>
              <input
                required
                type="number"
                name="phone"
                id="phone"
                class="bg-[#ffffff21] border rounded-xl"
              /></label
            >
            <div>
              <button
                type="submit"
                id="formbtn"
                class="p-2 px-3 bg-[radial-gradient(ellipse_at_right,_var(--tw-gradient-stops))] from-sky-500 to-indigo-900 rounded-lg border-2 border-indigo-900 font-bold shadow-2xl lg:p-4 lg:px-6"
                >Submit</button
              >
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .swiper {
    margin: 100px auto;
    width: 100%;
    height: 100%;
  }

  .swiper-slide {
    background-position: center;
    background-size: cover;
  }

  .swiper-slide img {
    display: block;
    width: 100%;
  }
</style>

<script is:inline>
  const forms = document.getElementById("forms");

  function sendMail(e) {
    e.preventDefault();

    var templateParams = {
      name: document.getElementById("name").value,
      email: document.getElementById("email").value,
      phone: document.getElementById("phone").value,
    };

    emailjs.send("service_k5matsk", "template_a4f0tpp", templateParams).then(
      function (response) {
        console.log("SUCCESS!", response.status, response.text);
        alert("Email Sent!");
        document.getElementById("name").value = "";
        document.getElementById("email").value = "";
        document.getElementById("phone").value = "";
      },
      function (error) {
        console.log("FAILED...", error);
        alert("Something Went Wrong. Please Try Again!");
      }
    );
  }

  forms.addEventListener("submit", sendMail);
</script>
