      <div>
        <SwiperProjects images={geraPlot} mobile={false} client:load />
      </div>
    </div>
    <div
      class="grid grid-cols-2 justify-center items-center mt-10 px-14 xl:px-16 2xl:px-20 gap-2 xl:gap-4"
    >
      <div>
        <h2 class="text-3xl font-bold text-[#02008a] xl:text-4xl 2xl:text-5xl">
          Plot in Tivim For outright sale
        </h2>
        <div class="p-2">
          <a
            class="text-[#00014b] hover:text-[#02008a] font-medium xl:text-base flex justify-start items-start p-1"
            href="https://www.google.com/maps?q=15.6267374,73.865235&z=17&hl=en"
            target="_blank"
          >
            <span></span>
            <span>Mapusa - Bicholim Rd, Sircaim, Bodiem, Goa 403502</span>
          </a>
